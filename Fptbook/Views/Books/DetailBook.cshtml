@model Fptbook.ViewModel.Book.DetailBookViewModel

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Detail</h1>
   
    <div class="card mb-4">
